@page
@model HR.Pages.Employees.CreateModel

@{
    ViewData["Title"] = "Enlist";
}

<div class="row">
    <div class="col-md-6 formBody">
        <div class="title formTitle">
            <h2>Are you ready for the final frontier?</h2>
            <h3>Travelling into space is at your own risk. All injury, which is included but not limited to meteor collissions, parasitical invasions, delusions of grandeur, will not be covered by Parnell Aerospace or any of its associating firms. Terms and Conditions may apply.</h3>
        </div>

        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Employee.Name" class="control-label"></label>
                <input asp-for="Employee.Name" class="form-control" />
                <span asp-validation-for="Employee.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.Location" class="control-label"></label>
                <input asp-for="Employee.Location" class="form-control" />
                <span asp-validation-for="Employee.Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.Department" class="control-label"></label>
                <input asp-for="Employee.Department" class="form-control" />
                <span asp-validation-for="Employee.Department" class="text-danger"></span>
            </div>
            <div class="form-group formFooter">
                <input type="submit" value="Sign up" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
